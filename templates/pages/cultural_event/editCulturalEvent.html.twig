{% extends 'base.html.twig' %}

{% block title %}<i class="fa-solid fa-pen"></i> Modification du ticket {{ event.title }}{% endblock %}

{% block body %}
    <h1>Modification de {{ event.title }}</h1>

    <br>
    <a href="{{ path('app_cultural_event_show', {id: event.id}) }}" class="btn btn-secondary"><i class="fa-solid fa-arrow-left-long"></i> Quitter sans modifier</a>
    <br>
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Valider les modifications</button>
    {{ form_end(form) }}

    <a href="{{ path('app_cultural_event_list') }}" class="btn btn-secondary"><i class="fa-solid fa-arrow-left-long"></i> Retourner a la liste des tickets</a>
{% endblock %}
