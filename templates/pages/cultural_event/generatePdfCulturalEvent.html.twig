{% extends 'base.html.twig' %}

{% block title %}Generate PDF{% endblock %}

{% block body %}
<h1>Generate PDF Tickets</h1>

{% if form.vars.errors|length > 0 %}
    <div class="alert alert-danger">
        <ul>
            {% for error in form.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

{{ form_start(form) }}
    {{ form_row(form.startNumber) }}
    {{ form_row(form.endNumber) }}
    <button type="submit" class="btn btn-primary">Generate PDF</button>
{{ form_end(form) }}

<a href="{{ path('app_cultural_event_show', {id: event.id}) }}" class="btn btn-secondary">Cancel</a>
{% endblock %}
