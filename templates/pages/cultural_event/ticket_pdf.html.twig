<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{ event.title }}</title>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .ticket {
            width: 200mm;
            height: 70mm;
            box-sizing: border-box;
            background-image: url("{{ backgroundImageBase64 }}"); /* Utilisation de l'image base64 */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        table {
            width: 100%;
            height: 100%;
            table-layout: fixed;
            border-collapse: collapse;
        }

        td {
            vertical-align: top;
            padding: 0;
            margin: 0;
        }

        .left, .center, .right {
            padding: 10px;
            text-align: center;
        }

        .left {
            width: 25%;
            font-size: 0.7rem;
            padding-top: 75px;
        }

        .center {
            padding-top: 20px;
            width: 35%;
            font-size: 0.5rem;
            text-align: center;
            transform: rotate(-90deg);
        }

        .right {
            width: 55%;
            font-size: 0.8rem;
            position: relative;
            left: -187px;
            top: 110px;
        }

        h1 {
            margin: 0;
            padding: 5px 0;
            font-size: 0.9rem;
        }

        p {
            margin: 0;
            padding: 2px 0;
        }

        .ticket-number span {
            font-size: 1.5rem;
            font-weight: bold;
        }

        /* Éviter les sauts de page à l'intérieur des tickets lors de l'impression */
        @media print {
            .ticket {
                page-break-inside: avoid;
            }
        }
    </style>
</head>
<body>
    {% for i in startNumber..endNumber %}
        <div class="ticket">
            <table>
                <tr>
                    <!-- Section Gauche -->
                    <td class="left">
                        <img src="{{ backgroundImageBase64 }}" alt="Background Image" />

                        <h1>{{ event.series }}</h1>
                        <p>{{ event.placing }}</p>
                        <p>N° billet : <span>{{ i }}</span></p>
                        <p>{{ event.department.name }}<br>{{ event.department.postalCode }}</p>
                        <p>{{ event.siret }}<br>{{ event.licence }}</p>
                    </td>

                    <!-- Section Centre -->
                    <td class="center">
                        <h1>{{ event.series }}</h1>
                        <p>{{ event.placing }}</p>
                        <p>N° billet : <span>{{ i }}</span></p>
                        <p>{{ event.department.name }}<br>{{ event.department.postalCode }}</p>
                    </td>

                    <!-- Section Droite -->
                    <td class="right">
                        <h1>{{ event.series }}</h1>
                        <p>{{ event.placing }}</p>
                        <p>N° billet : <span>{{ i }}</span></p>
                        <p>{{ event.department.name }}<br>{{ event.department.postalCode }}</p>
                        <p>{{ event.siret }}<br>{{ event.licence }}</p>
                    </td>
                </tr>
            </table>
        </div>
    {% endfor %}
</body>
</html>
