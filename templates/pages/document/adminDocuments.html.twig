{% extends 'base.html.twig' %}

{% block title %}<i class="fa-solid fa-folder-open"></i> Documents Admin{% endblock %}

{% block body %}
    <h1>Documents réservés aux administrateurs</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    <br>
    <a href="{{ path('app_admin_document_new') }}" class="button-send" role="button"><i class="fa-solid fa-plus"></i> Ajouter un document pour les administrateurs</a>
    <form id="searchForm" method="get" action="{{ path('app_admin_documents') }}">
        <br>
        <div style="position: relative; width: 100%;">
            <input type="text" id="searchInput" name="search" placeholder="Rechercher un document">
            <i class="fa-solid fa-search search-icon"></i>
        </div>
    </form>

    <div id="documentsGrid" class="documents-container" data-controller="documentAdm">
        {% if is_granted('ROLE_ADMIN') %}
            {% if documents is not empty %}
                {% for document in documents %}
                    {% if document.isAdminOnly == true %}
                        <div class="document-card" data-id="{{ document.id }}>
                            {% set fileExtension = document.filePath|split('.')|last %}
                            
                            {% set fileIcon = {
                                'pdf': 'fa-file-pdf',
                                'docx': 'fa-file-word',
                                'xlsx': 'fa-file-excel',
                                'csv': 'fa-file-csv',
                                'png': 'fa-file-image',
                                'jpg': 'fa-file-image',
                                'jpeg': 'fa-file-image',
                                'gif': 'fa-file-image',
                                'svg': 'fa-file-image',
                                'bmp': 'fa-file-image',
                                'tiff': 'fa-file-image',
                                'txt': 'fa-file-alt',
                                'md': 'fa-file-alt',
                                'rtf': 'fa-file-alt',
                                'pptx': 'fa-file-powerpoint',
                                'ppt': 'fa-file-powerpoint',
                                'zip': 'fa-file-archive',
                                'rar': 'fa-file-archive',
                                '7z': 'fa-file-archive',
                                'tar': 'fa-file-archive',
                                'gz': 'fa-file-archive',
                                'mp3': 'fa-file-audio',
                                'wav': 'fa-file-audio',
                                'ogg': 'fa-file-audio',
                                'flac': 'fa-file-audio',
                                'mp4': 'fa-file-video',
                                'avi': 'fa-file-video',
                                'mkv': 'fa-file-video',
                                'mov': 'fa-file-video',
                                'wmv': 'fa-file-video',
                                'html': 'fa-file-code',
                                'css': 'fa-file-code',
                                'js': 'fa-file-code',
                                'json': 'fa-file-code',
                                'xml': 'fa-file-code',
                                'php': 'fa-file-code',
                                'java': 'fa-file-code',
                                'py': 'fa-file-code',
                                'cpp': 'fa-file-code',
                                'c': 'fa-file-code',
                                'sh': 'fa-file-code'
                            } [fileExtension] ?? 'fa-file' %}

                            <div class="file-icon">
                                <i class="fa-solid {{ fileIcon }}"></i>
                            </div>
                            <div class="document-info">
                                <h2>{{ document.title|capitalize|slice(0, 10) }}</h2>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            {% else %}
                <p>Aucun document</p>
            {% endif %}
        {% endif %}
    </div>

{% endblock %}
