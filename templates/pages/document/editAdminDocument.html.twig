{# templates/pages/document/editDocument.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier le Document{% endblock %}

{% block body %}
    <h1>Modifier le Document : {{ document.title }}</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-success">Modifier</button>
    {{ form_end(form) }}

    <a href="{{ path('app_admin_documents') }}" class="btn btn-secondary"> Retour aux documents</a>
{% endblock %}
