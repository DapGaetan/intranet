{% extends 'base.html.twig' %}

{% block title %}Document Admin - {{ document.title }}{% endblock %}

{% block body %}
    <h1>{{ document.title }}</h1>

    <iframe src="{{ asset(filePath) }}" width="100%" height="600" style="border: none;">
        <p>Il semble que votre navigateur ne soit pas configuré pour afficher les fichiers PDF.
            Pas de souci, cliquez ici pour <a href="{{ asset(filePath) }}">télécharger le fichier PDF.</a>
        </p>
    </iframe>

    <a href="{{ path('app_admin_document_download', {id: document.id}) }}" class="btn btn-primary">Télécharger</a>
    <a href="{{ path('app_admin_document_edit', {id: document.id}) }}" class="btn btn-warning">Éditer</a>
    <a href="{{ path('app_admin_document_delete', {id: document.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce document ?')">Supprimer</a>

    <br><br>
    <a href="{{ path('app_admin_documents') }}" class="btn btn-secondary">Retour aux documents</a>
{% endblock %}
