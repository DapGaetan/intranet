{% extends 'base.html.twig' %}

{% block title %} Lien{% endblock %}

    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

{% block body %}
    <h1>Ajouter un lien :</h1>
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.url) }}
    <button type="submit">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}

