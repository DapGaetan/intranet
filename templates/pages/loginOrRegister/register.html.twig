{% extends 'base.html.twig' %}

{% block title %}<i class="fa-regular fa-address-card"></i> Création de compte{% endblock %}

{% block body %}
    <h1>Crée un compte :</h1>

        {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.first_name) }}
        {{ form_row(registrationForm.last_name) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.department) }}
        {{ form_row(registrationForm.position) }}
        {{ form_row(registrationForm.job) }}
        {{ form_row(registrationForm.plainPassword)}}
        {{ form_row(registrationForm.plainPasswordConfirm) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Crée le compte</button>
    {{ form_end(registrationForm) }}
{% endblock %}
