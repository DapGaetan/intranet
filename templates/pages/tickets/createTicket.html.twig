{% extends 'base.html.twig' %}

{% block title %}Création de Ticket{% endblock %}

{% block body %}
    <h3>Crée un ticket :</h3>

    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

{{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit">Crée le ticket</button>
    {{ form_end(form) }}

    <h3>Ce ticket sera envoyé au service informatique :</h3>

    <section class="tickets_listofmoderation">
        <ul>
            {% for admin in admins %}
                <li>
                    <div>
                        <i class="fa-solid fa-user-shield"></i> {{ admin.firstName | capitalize }} {{ admin.lastName  | capitalize }}    
                    </div>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
