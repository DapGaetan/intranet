{% extends 'base.html.twig' %}

{% block title %}<i class="fa-solid fa-ticket"></i> Mes tickets{% endblock %}

{% block body %}
    <h2>Mes Tickets</h2>

    <button class="button-send"><a href="{{ path('app_create_ticket') }}"><i class="fa-solid fa-plus"></i> Nouveau ticket</a></button>
    <br>
    {% if pagination.getTotalItemCount() > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Consulté</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Statut</th>
                    <th>Priorité</th>
                    <th>Créé le</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for ticket in pagination.getItems() %}
                    <tr>
                        <td><a href="{{ path('app_ticket_show', {id: ticket.id}) }}"><i class="fa-solid fa-eye"></i></a></td>
                        <td>{{ ticket.title }}</td>
                        <td>{{ ticket.description }}</td>
                        <td>
                            {% if ticket.status == 'Open' %}
                                <i class="fa-solid fa-person-digging"></i>
                            {% else %}
                                <i class="fa-solid fa-check"></i>
                            {% endif %}
                        </td>
                        <td>
                            {% if ticket.priority == 'low' %}
                                <i class="fa-solid fa-temperature-quarter priority priority-low"></i>
                            {% elseif ticket.priority == 'medium' %}
                                <i class="fa-solid fa-temperature-half priority priority-medium"></i>
                            {% elseif ticket.priority == 'high' %}
                                <i class="fa-solid fa-temperature-three-quarters priority priority-high"></i>
                            {% elseif ticket.priority == 'very high' %}
                                <i class="fa-solid fa-temperature-full priority priority-very-high"></i>
                            {% endif %}
                        </td>
                        <td>{{ ticket.createdAt|date('Y-m-d') }}</td>
                        <td><a href="{{ path('app_ticket_modify', {id: ticket.id}) }}"><i class="fa-solid fa-file-pen"></i></a></td>
                        <td>
                            <form method="post" action="{{ path('app_ticket_delete', {id: ticket.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce ticket ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
                                <button class="button-delete" type="submit"><i class="fa-solid fa-trash-can"></i></button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun ticket trouvé.</p>
    {% endif %}

    {% if pagination.getPageCount() > 1 %}
        {% include 'bundles/KnpPaginatorBundle/Pagination/custom_pagination.html.twig' with { 'pagination': pagination } %}
    {% endif %}
{% endblock %}
